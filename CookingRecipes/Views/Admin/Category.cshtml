@model List<CookingRecipes.Domain.Entities.Category>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Categories";
}

<h2 class="mb-4">Manage Categories</h2>

<div class="mb-3">
    <form asp-action="AddCategory" method="post">
        <div class="input-group mb-3">
            <input type="text" name="Name" class="form-control" placeholder="New Category" required />
            <button type="submit" class="btn btn-success ms-2">Add Category</button>
        </div>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
